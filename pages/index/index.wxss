.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
  padding: 25px;
}

.userinfo-avatar {
  overflow: hidden;
  /* width: 128rpx;
  height: 128rpx; */
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

.tasks {
  border-top: 1px solid #000;
  /* background: #f4f4f4; */
  background: #fff;
  border-color: #f96332 #f96332 #f96332 #f96332;
  /* border-radius: 5px; */
  /* padding-top: 10px; */
  padding: 10px 10px 30px 10px;
  width: 90%;
  height: 200spx;
  margin-top: 30px;
}

.tasks .danger {
  border: 1px solid #000;
  background: linear-gradient(60deg, #ef5350, #e53935);
  /* background: #f96332; */
  border-radius: 6px;
  box-shadow: 0 4px 20px 0 rgb(0 0 0 / 14%), 0 7px 10px -5px rgb(0 172 193 / 40%);
  /* border-color: #f96332; */
  position: relative;
  float: left;
  padding: 5px;
  margin-top: -25px;
}

