      </mp-cell>
    </mp-cells>
    <mp-cells title="用户辅助页面">
      <mp-cell link hover value="注册页面(register)" footer="" url="../user/register">
      </mp-cell>
      <mp-cell link hover value="抱歉页面(sorry)" footer="" url="../index/sorry">
      </mp-cell>
      <mp-cell link hover value="验证页面(verify)" footer="" url="../index/verify">
      </mp-cell>
      <mp-cell link hover value="报名广告(ad)" footer="" url="../index/not_registered">
