<view class="container">
  <view class="userinfo">
    <block wx:if="{{canIUseOpenData}}" calss="userinfo-opendata">
      <view class="userinfo-avatar" bindtap="bindViewTap">
        <open-data type="userAvatarUrl"></open-data>
      </view>
      <open-data type="userNickName"></open-data>
      <text>级别：王者</text>
      <!-- <block>
        <navigator url="../home/home">
          <button style="background-color: #f96332; padding: 10rpx">进入个人页面</button>
        </navigator>
      </block> -->
    </block>
    <block wx:elif="{{!hasUserInfo}}">
      <button wx:if="{{canIUseGetUserProfile}}" bindtap="getUserProfile"> 获取头像昵称PF </button>
      <button wx:elif="{{canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 获取头像昵称UI </button>
      <view wx:else> 请使用1.4.4及以上版本基础库 </view>
    </block>
    <block wx:else>
      <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
      <text class="userinfo-nickname">{{userInfo.nickName}}</text>
    </block>
  </view>
  <!-- Quick Start -->
  <!-- 页面 -->
  <view wx:if="{{!isLogin}}" class="btn bg-gradient-primary mt-10" bindtap="tapLogin">登陆</view>
  <view wx:else class="btn bg-gradient-primary mt-10" bindtap="tapLogin">打开主页</view>
  <view wx:if="{{!isLogin}}" class="btn bg-gradient-info mt-10" bindtap="tapVerify">验证</view>
  <view>
    <mp-cells title="页面入口测试">
      <mp-cell link hover value="学生页面(student)" footer="" url="../student/index">
