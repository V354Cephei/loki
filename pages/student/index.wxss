/**index.wxss**/
.badge {
  width: 60rpx;
  height: 60rpx;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  /* color: #aaa; */
  padding: 25px;
}

.userinfo-avatar {
  overflow: hidden;
  /* width: 128rpx;
  height: 128rpx; */
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

.btn-secondary {
  color: #000;
  background-color: #8392ab;
  border-color: #8392ab;
}
.btn {
  display: inline-block;
  font-weight: 700;
  line-height: 1.4;
  color: #67748e;
  text-align: center;
  vertical-align: middle;
  cursor: pointer;
  user-select: none;
  background-color: transparent;
  border: 1px solid transparent;
  padding: .75rem 1.5rem;
  font-size: .75rem;
  border-radius: .5rem;
  transition: all .15s ease-in;
}

.bg-gradient-primary {
  background-image: linear-gradient(310deg,#7928ca,#ff0080);
}

.bg-gradient-secondary {
  background-image: linear-gradient(310deg,#627594,#a8b8d8);
}

.bg-gradient-info {
  background-image: linear-gradient(310deg,#2152ff,#21d4fd);
}

.bg-gradient-success {
  background-image: linear-gradient(310deg,#17ad37,#98ec2d);
}

.bg-gradient-danger {
  background-image: linear-gradient(310deg,#ea0606,#ff667c);
}

.bg-gradient-warning {
  background-image: linear-gradient(310deg,#f53939,#fbcf33);
}

.btn-end-icon {
  width: 40%;
  height: 75rpx;
  border-radius: 3px 3px 3px 3px;
  background: white;
}

.btn-end {
  width: 100%;
  height: 75rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 16px;
  color: #fff;
  border-radius: 3px 3px 3px 3px;
  box-shadow: 5px 20px 15px 2px rgba(0, 0, 0, 0.1);
}