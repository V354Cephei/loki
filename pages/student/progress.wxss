/* pages/student/progress.wxss */
ec-canvas {
  width: 100%;
  height: 600rpx;
}

.move-container {
  width: 100%;
  /* min-height: 500px; */
}

.course-card {
  width: 95%;
  position: relative;
  display: flex;
  flex-direction: column;
  min-width: 0;
  word-wrap: break-word;
  background-color: #fff;
  background-clip: border-box;
  border: 0 solid rgba(0, 0, 0, .125);
  border-radius: 1rem;
  margin-bottom: 20rpx;
}

.course-card-header {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: .75rem 1.25rem;
  font-weight: 700;
  margin-bottom: 0;
  text-align: left;
  color: #ffffff;
  background-color: rgba(0,0,0,.03);
  border-bottom: 1rpx solid rgba(0,0,0,.125);
}

.course-card-body {
  display: flex;
  flex-direction: column;
  padding: 10rpx 10rpx 30rpx 10rpx;
  font-family: Open Sans;
}

.divLine{
  background: whitesmoke;
  height: 0.6rpx;
  width: 100%;
 }

 .progress-title {
   font-weight: 700;
  color: white; 
  padding: 0 20rpx 0 20rpx;
 }

 .progress-items {
  color: white; 
  padding: 0 30rpx 0 30rpx;
  display:flex; 
  flex-direction: row;
  justify-content: space-between;
 }