
.card{
    width: 100%;
    height: 90%;
    background-color: #ffffff;
    box-sizing: border-box;
    border: 1rpx solid #f9f9f9;
    box-shadow: 0 2rpx 20rpx #999999;
    border-radius: 30rpx;
    margin-top: 50rpx;
}

.card .top{
    width: 100%; 
}
.card-body{
    width: 100%; 
    height: 90%;
    /* text-align:center; */
    padding: 20rpx;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
}

.card-header {
    padding: .75rem 1.25rem;
    margin-bottom: 0;
    text-align: right;
    color: #ffffff;
    background-color: rgba(0,0,0,.03);
    border-bottom: 1rpx solid rgba(0,0,0,.125);
}
